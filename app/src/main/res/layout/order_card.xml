<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        app:cardCornerRadius="5dp"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="3">

        <TextView
                android:text="Request Date/Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:textSize="18sp"
                android:textStyle="bold" android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:paddingStart="20dp"
                android:paddingTop="5dp"/>
        <TextView
                android:text="hi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/dataTime" android:layout_weight="1"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingTop="10dp"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/colorPrimary"/>

        <TextView
                android:text="Super Market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:textSize="18sp"
                android:textStyle="bold" android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingTop="5dp" android:layout_weight="1"/>
        <TextView
                android:text="Market Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/marketName" android:textSize="14sp"
                android:textAlignment="textStart"
                android:paddingTop="5dp"
                android:paddingStart="20dp"
                android:layout_weight="1"/>
        <TextView
                android:text="Market Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/marketAddress" android:textSize="14sp"
                android:textAlignment="textStart"
                android:paddingTop="5dp"
                android:paddingStart="20dp"
                android:layout_weight="1"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/colorPrimary"/>

        <TextView
                android:text="Customer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingTop="10dp"/>
        <TextView
                android:text="hii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customerAddress" android:minLines="1"
                android:maxLines="10"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingTop="5dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>