<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".intro.SignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/register"
                android:id="@+id/loginscreen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"/>

        <ImageView
                app:srcCompat="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/loginscreen"
                app:layout_constraintHorizontal_bias="0.431" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/loginscreen" app:layout_constraintVertical_bias="0.1"/>

        <androidx.cardview.widget.CardView
                android:layout_width="274dp"
                android:layout_height="410dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
                android:id="@+id/cardView2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="20dp">
                <TextView
                        android:text="WELCOM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9" android:textSize="30sp"
                        android:textColor="@color/colorPrimaryDark" android:textStyle="bold"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="59dp" android:id="@+id/view"/>

                <TextView
                        android:text="User Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="18sp"
                        android:textStyle="bold"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="8dp">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:ems="10"
                            android:padding="4dp"
                            android:id="@+id/user_name" android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:autofillHints="Enter Your Phone Number"/>
                    <ImageView
                            app:srcCompat="@drawable/userprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:padding="8dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                        android:text="PHONE NUMBER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="18sp"
                        android:textStyle="bold"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="8dp">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:ems="10"
                            android:padding="4dp"
                            android:id="@+id/editText" android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:autofillHints="Enter Your Phone Number"/>
                    <ImageView
                            app:srcCompat="@drawable/phonecall"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:id="@+id/imageView9"
                            android:padding="8dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                        android:layout_width="210dp"
                        android:layout_height="57dp"
                        android:text="SIGN UP"
                        android:id="@+id/confirm_signup"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="5dp"
                        android:background="@color/colorAccent"
                        app:strokeColor="@color/colorAccent"
                        android:layout_marginHorizontal="20dp"
                        android:theme="@style/FormButton"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        app:strokeWidth="2dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.003"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="93dp"
                android:layout_height="213dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="120dp"
                app:layout_constraintTop_toTopOf="parent" android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/cardView2"
                android:layout_marginEnd="8dp">
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup"
                    android:text="SIGN UP"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:backgroundTint="@color/colorWhite"
                    app:cornerRadius="8dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    app:strokeColor="@color/colorAccent"/>
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signin"
                    android:text="SIGN IN"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    app:backgroundTint="@color/colorWhite"
                    app:cornerRadius="8dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    app:strokeColor="@color/colorAccent"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>