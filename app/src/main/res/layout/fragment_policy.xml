<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".settings.PolicyFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            tools:context=".PrivacyPolicyActivity">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3" android:layout_margin="30dp"
                    android:padding="5dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="1-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                            android:fontFamily="sans-serif" android:layout_marginEnd="5dp"
                            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="@string/using_our_services"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" android:id="@+id/textView2" android:fontFamily="sans-serif"
                            android:textSize="18sp" android:textStyle="bold" android:textAlignment="textStart"/>
                </LinearLayout>
                <TextView
                        android:layout_width="319dp"
                        android:layout_height="wrap_content" android:id="@+id/customer_phone"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp" android:textAlignment="textStart"
                        android:text="@string/privacybody" android:layout_weight="1" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/linearLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="30dp" android:padding="5dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="2-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"
                            android:fontFamily="sans-serif" android:layout_marginEnd="5dp"
                            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="@string/your_account"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" android:id="@+id/market_address" android:fontFamily="sans-serif"
                            android:textSize="18sp" android:textStyle="bold" android:textAlignment="textStart"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp" android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:text="@string/body" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>