<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".settings.ProfileFragment">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:background="@color/colorPrimary">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="112dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="5dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" android:weightSum="2">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="68dp"
                                android:layout_height="match_parent" android:layout_weight="1" android:padding="20dp">
                            <TextView
                                    android:text="Driver Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView4"
                                    android:textSize="18sp" android:textColor="@color/colorAccent"
                                    android:textStyle="bold" android:textAlignment="textStart"
                                    android:paddingStart="15dp" android:paddingTop="15dp"/>
                            <TextView
                                    android:text="0123456789"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView6"
                                    android:textAlignment="textStart" android:paddingStart="15dp"/>
                        </LinearLayout>
                        <ImageView
                                app:srcCompat="@drawable/userprofile"
                                android:layout_width="7dp"
                                android:layout_height="64dp"
                                android:id="@+id/imageView6"
                                android:background="@color/colorWhite" android:layout_weight="1"
                                android:layout_margin="20dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                        android:text="Basic Information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView20"
                        android:background="#9C969696"
                        android:textSize="18sp" android:padding="8dp" android:layout_marginStart="5dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite">

                <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView23"
                        android:textSize="18sp" android:textStyle="bold" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="5dp"/>
                <TextView
                        android:text="Driver Name"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:id="@+id/driver_name"
                        android:background="@color/colorPrimary"
                        android:textSize="14sp" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="5dp"/>
                <TextView
                        android:text="Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView27"
                        android:textSize="18sp" android:textStyle="bold" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="5dp"/>
                <TextView
                        android:text="0123456789"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:id="@+id/driver_mobile"
                        android:background="@color/colorPrimary"
                        android:textSize="14sp" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="10dp"/>
                <TextView
                        android:text="Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView30"
                        android:textSize="18sp" android:textStyle="bold" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="5dp"/>
                <TextView
                        android:text="Driver Address"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:id="@+id/driver_address"
                        android:background="@color/colorPrimary"
                        android:textSize="14sp" android:textAlignment="textStart"
                        android:paddingStart="15dp" android:paddingTop="15dp" android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>
</FrameLayout>