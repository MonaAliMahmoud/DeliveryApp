<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:weightSum="4">
    <ImageView
            app:srcCompat="@drawable/orderitem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_img"
            android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_name"
            android:layout_weight="1" android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_quantity"
            android:layout_weight="2" android:textSize="14sp" android:textAlignment="textStart"/>
</LinearLayout>
